# --- FLASK CORE ---
FLASK_APP=run.py
FLASK_DEBUG=True
SECRET_KEY=your_strong_random_secret_key_here
APP_PASSWORD=your_secure_password_here
INTERNAL_API_KEY=your_internal_api_key_here

# --- PLEX ---
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here
PLEX_LIBRARIES_TO_IGNORE=Musique,Photos

# --- *ARR SUITE ---
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here
DEFAULT_SONARR_ROOT_FOLDER=/path/to/your/sonarr/root/folder/
DEFAULT_SONARR_PROFILE_ID=1
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key_here
DEFAULT_RADARR_ROOT_FOLDER=/path/to/your/radarr/root/folder/
DEFAULT_RADARR_PROFILE_ID=1
RADARR_TAG_ON_ARCHIVE=vu
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=your_prowlarr_api_key

# --- SEEDBOX: rTORRENT/ruTORRENT API ---
RTORRENT_API_URL=https://YOUR_SEEDBOX_IP/rutorrent/plugins/httprpc/action.php
RTORRENT_USER=your_rutorrent_username
RTORRENT_PASSWORD=your_rutorrent_password
RTORRENT_SSL_VERIFY=False

# --- SEEDBOX: SFTP ---
SEEDBOX_SFTP_HOST=your_sftp_host
SEEDBOX_SFTP_PORT=22
SEEDBOX_SFTP_USER=your_sftp_user
SEEDBOX_SFTP_PASSWORD=your_sftp_password
# (Optionnel) Pour mapper les chemins entre rTorrent et SFTP si'ils sont différents.
# Format: "/partie/du/chemin/rtorrent/a/remplacer,/partie/a/mettre/pour/sftp"
# Exemple: "/home/user/downloads,/downloads"
# Exemple pour chroot: "/sdi/0103/,/"
SEEDBOX_SFTP_REMOTE_PATH_MAPPING=

# --- PATHS & DIRECTORIES ---
LOCAL_STAGING_PATH=X:/seedbox_staging
LOCAL_PROCESSED_LOG_PATH=instance/processed_sftp_items.json
RTORRENT_LABEL_SONARR=sonarr
RTORRENT_LABEL_RADARR=radarr
SEEDBOX_RTORRENT_INCOMING_SONARR_PATH=/path/to/rtorrent/sonarr_incoming
SEEDBOX_RTORRENT_INCOMING_RADARR_PATH=/path/to/rtorrent/radarr_incoming
SEEDBOX_SCANNER_TARGET_SONARR_PATH=/path/to/sftp/sonarr_finished
SEEDBOX_SCANNER_TARGET_RADARR_PATH=/path/to/sftp/radarr_finished
SEEDBOX_SCANNER_WORKING_SONARR_PATH=/path/to/sftp/sonarr_working
SEEDBOX_SCANNER_WORKING_RADARR_PATH=/path/to/sftp/radarr_working

# --- YGGTORENT & FLARESOLVERR ---
YGG_INDEXER_ID=
YGG_BASE_URL=https://www.yggtorrent.top
YGG_COOKIE=
YGG_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/108.0.0.0 Safari/537.36
FLARESOLVERR_URL=http://localhost:8191
YGG_USERNAME=
YGG_PASSWORD=
YGG_PASSKEY=
YGG_DOMAIN=www.yggtorrent.top
COOKIE_DOWNLOAD_PATH=

# --- API Externes ---
TVDB_API_KEY=
TVDB_PIN=
TMDB_API_KEY=
YOUTUBE_API_KEY=
# Modèle Gemini à utiliser. "gemini-1.5-pro-latest" est recommandé pour sa puissance.
GEMINI_MODEL_NAME=gemini-1.5-pro-latest
GEMINI_API_KEY=

# --- ADVANCED & TASKS ---
MMS_API_PROCESS_STAGING_URL=http://localhost:5001/seedbox/process-staging-item
SCHEDULER_SFTP_SCAN_INTERVAL_MINUTES=15
SFTP_SCANNER_GUARDFRAIL_ENABLED=True
ORPHAN_CLEANER_PERFORM_DELETION=False
ORPHAN_CLEANER_EXTENSIONS=.nfo,.jpg,.jpeg,.png,.txt,.srt,.sub,.idx,.lnk,.exe,.vsmeta,.edl
MMS_ENV_FILE_PATH=
MMS_RESTART_COMMAND=

# --- SEARCH FILTERS ---
# Listes d'options pour les filtres de recherche (séparées par des virgules)
SEARCH_FILTER_QUALITY_LIST=1080p,720p,2160p
SEARCH_FILTER_CODEC_LIST=x265,x264,H.264,H.265
SEARCH_FILTER_SOURCE_LIST=BluRay,WEB-DL,HDTV,WEB,BDRip,WEBRip
SEARCH_FILTER_RELEASE_GROUP_LIST=TFA,FW,SUPPLY,WEEDS

# Alias pour les valeurs des filtres (la clé est la valeur normalisée, la valeur est une liste d'alias)
# Exemple: Pour la langue "FRENCH", on accepte "VFF", "VF", "TRUEFRENCH"
SEARCH_FILTER_LANG_FRENCH=VFF,VF,TRUEFRENCH
SEARCH_FILTER_LANG_VOSTFR=VOST,SUBFRENCH
SEARCH_FILTER_LANG_MULTI=MULTI

# --- BACKUP CONFIGURATION ---
# Schedule for automatic backups. Options: disabled, hourly, daily, weekly
BACKUP_SCHEDULE=disabled
# Number of backup copies to keep.
BACKUP_RETENTION=7

# --- SEEDBOX CLEANER ---
# Activer ou désactiver l'agent de nettoyage automatique de la seedbox.
SEEDBOX_CLEANER_ENABLED=False
# Intervalle en heures entre chaque exécution automatique de l'agent.
SEEDBOX_CLEANER_SCHEDULE_HOURS=24
# Mode simulation (Dry Run). Si True, l'agent ne supprime rien mais logue les actions qu'il aurait entreprises.
SEEDBOX_CLEANER_DRY_RUN=True
# Seuil (en pourcentage) d'utilisation de l'espace disque qui déclenche le mode de nettoyage d'urgence.
SEEDBOX_CLEANER_EMERGENCY_THRESHOLD_PERCENT=90
# (Mode Routine) Ratio minimum qu'un torrent doit atteindre pour être un candidat à la suppression.
SEEDBOX_CLEANER_ROUTINE_MIN_RATIO=1.0
# (Mode Routine) Durée de seed minimum (en jours) qu'un torrent doit atteindre pour être un candidat à la suppression.
SEEDBOX_CLEANER_ROUTINE_MIN_SEED_DAYS=14
# (Obligatoire pour le nettoyeur) Taille totale de votre quota sur la seedbox, en Giga-octets (GB).
# Mettez une valeur supérieure à 0 pour activer le calcul de l'espace disque. Exemple: 750 pour 750GB.
SEEDBOX_QUOTA_SIZE_GB=0

# --- DASHBOARD ---
# Keywords to exclude from the dashboard (comma-separated, case-insensitive)
DASHBOARD_EXCLUDE_KEYWORDS=VFQ,VOSTFR,VOST
# Minimum movie year to display on the dashboard
DASHBOARD_MIN_MOVIE_YEAR=2020
# Prowlarr category IDs to fetch for the dashboard (comma-separated: 2000 for movies, 5000 for TV)
DASHBOARD_PROWLARR_CATEGORIES=2000,5000
# Automatic refresh interval for the dashboard in hours. Set to 0 to disable.
DASHBOARD_REFRESH_INTERVAL_HOURS=6
